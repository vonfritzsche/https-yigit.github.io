<script>
  /* ----------------- STARTUP OVERLAY LOGIC ----------------- */
  (function() {
    const overlay = document.getElementById('xp-startup');
    const bar = document.getElementById('xp-progress-bar');
    const label = document.getElementById('xp-progress-label');
    const skip = document.getElementById('startup-skip');
    const music = document.getElementById('bgMusic');

    const AUTO_HIDE_AFTER_MS = 3000;
    let startTime = null;
    let rafId = null;

    function updateProgress(timestamp) {
      if (!startTime) startTime = timestamp;
      const elapsed = timestamp - startTime;
      const pct = Math.min(100, Math.round((elapsed / AUTO_HIDE_AFTER_MS) * 100));
      if (bar) bar.style.width = pct + '%';
      if (label) label.textContent = `Booting components... ${pct}%`;
      if (elapsed < AUTO_HIDE_AFTER_MS) {
        rafId = requestAnimationFrame(updateProgress);
      } else {
        hideOverlay();
      }
    }

    function hideOverlay() {
      if (!overlay) return;
      overlay.classList.add('hidden');
      if(music && music.paused) music.play().catch(e => {});
      if (rafId) cancelAnimationFrame(rafId);
    }

    function start() {
      if (!overlay) return;
      rafId = requestAnimationFrame(updateProgress);
      overlay.addEventListener('click', hideOverlay);
      skip.addEventListener('click', (e) => { e.stopPropagation(); hideOverlay(); });
    }

    document.readyState === 'loading' ? document.addEventListener('DOMContentLoaded', start) : start();
  })();

  /* ----------------- SITE SCRIPTS ----------------- */
  let loggedIn = false;
  let currentUser = '';

  function showPage(pageId) {
    document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
    document.getElementById(pageId).classList.add('active');
    updateAuth();
  }

  document.querySelectorAll('nav a').forEach(link => {
    link.addEventListener('click', () => showPage(link.getAttribute('data-page')));
  });

  function updateAuth() {
    const authSection = document.getElementById('auth-section');
    if (loggedIn) {
      authSection.innerHTML = `<span class="logged-in">${currentUser}</span> | <a onclick="logout()">Çıkış</a>`;
    }
  }

  function loginUser() {
    currentUser = document.getElementById('login-username').value;
    loggedIn = true;
    showPage('home');
  }

  function logout() { loggedIn = false; location.reload(); }

  function sendComment() {
    const ta = document.getElementById('comment-textarea');
    const div = document.createElement('div');
    div.className = 'thread-post';
    div.innerHTML = `<span class="post-user">${loggedIn ? currentUser : 'anon'}:</span><div class="post-content">${ta.value}</div>`;
    document.getElementById('comments-section').appendChild(div);
    ta.value = '';
  }
</script>
